{
  "name": "@goemoncode/react-explorer-treeview",
  "version": "1.0.1",
  "license": "MIT",
  "description": "Windows Explorer like TreeView component for React",
  "publishConfig": {
    "access": "restricted",
    "@goemoncode:registry": "https://npm.pkg.github.com"
  },
  "type": "module",
  "exports": {
    "./lib/style.css": "./lib/style.css",
    "./lib/index.scss": "./lib/index.scss",
    ".": {
      "module": "./lib/index.js",
      "require": "./lib/index.cjs",
      "default": "./lib/index.js"
    }
  },
  "browser": "lib/index.js",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "style": "lib/style.css",
  "sass": "lib/index.scss",
  "files": [
    "lib"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "tsc && vite build -c vite-lib.config.ts",
    "build:types": "tsc -p tsconfig.types.json && api-extractor run --local --verbose",
    "build:demo": "tsc && vite build",
    "preview:demo": "vite preview",
    "test": "vitest --config vitest.config.ts",
    "lint": "eslint --ext .ts,.tsx src demo"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@microsoft/api-extractor": "^7.36.4",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/ui": "^0.34.4",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "sass": "^1.66.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-static-copy": "^0.17.0",
    "vite-plugin-svgr": "^3.2.0",
    "vitest": "^0.34.4"
  },
  "peerDependencies": {
    "react": "^18.0",
    "react-dom": "^18.0"
  }
}
